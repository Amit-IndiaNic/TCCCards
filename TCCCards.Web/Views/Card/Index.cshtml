                <h5 class="valid"><span>Válido <br /> até</span><span>10/28</span></h5>
                <h5 class="card-holder">ABC XYZ</h5>
            </div>
            <div class="face back">
                <div class="blackbar"></div>
                <div class="cvvtext">
                    <div class="white-bar"></div>
                    <div class="cvv">123</div>
                </div>
